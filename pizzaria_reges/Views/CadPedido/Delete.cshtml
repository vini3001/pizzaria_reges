}

<h1>Deletar pedido</h1>

<h3>Tem certeza de que deseja deletar seu pedido?</h3>
<div>
    <h4>Pedido</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.pedido.Numero)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.pedido.Numero)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.pedido.Quantidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.pedido.Quantidade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.pedido.ValorTotal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.pedido.ValorTotal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.pedido.PedidoData)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.pedido.PedidoData)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.cliente.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cliente.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="pedido.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" asp-route-id="@Model.pedido.fk_ClienteID" class="btn btn-secondary">Voltar</a>
    </form>
</div>
